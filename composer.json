{
  "name": "outl1ne/nova-translatable",
  "description": "A laravel-translatable extension for Laravel Nova.",
  "keywords": [
    "laravel",
    "nova",
    "translatable",
    "i18n",
    "translate"
  ],
  "authors": [
    {
      "name": "Tarvo Reinpalu",
      "email": "tarvoreinpalu@gmail.com",
      "role": "Developer"
    },
    {
      "name": "Outl1ne",
      "email": "info@outl1ne.com",
      "role": "Maintainer"
    }
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.0",
    "laravel/nova": "^4.12",
    "nova-kit/nova-packages-tool": "^1.0",
    "spatie/laravel-translatable": "^4.0 || ^5.0 || ^6.0"
  },
  "autoload": {
    "psr-4": {
      "Outl1ne\\NovaTranslatable\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests",
      "App\\": "app",
      "Database\\Seeders\\": "database/seeders/",
      "Outl1ne\\NovaSimpleRepeatable\\SimpleRepeatable\\": "vendor/outl1ne/nova-simple-repeatable/src/SimpleRepeatable/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Outl1ne\\NovaTranslatable\\FieldServiceProvider"
      ]
    }
  },
  "scripts": {
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "repositories": [
    {
      "type": "composer",
      "url": "https://nova.laravel.com"
    }
  ],
  "require-dev": {
    "laracasts/cypress": "^3.0",
    "laravel/pint": "^1.16",
    "orchestra/testbench": "^8.0|^9.0",
    "outl1ne/nova-simple-repeatable": "^2.2",
    "pestphp/pest": "^2.34",
    "pestphp/pest-plugin-faker": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.4",
    "phpstan/phpstan-phpunit": "^1.4"
  }
}
